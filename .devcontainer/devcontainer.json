{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "hostRequirements": {
    "cpus": 4,
    "storage": "32gb"
  },
  "waitFor": "onCreateCommand",
  "onCreateCommand": {
    "minikube": "minikube start",
    "helmfile": "helmfile init --force"
  },
  "postCreateCommand": {
    "ingress": "minikube addons enable ingress"
  },
  "updateContentCommand": {
    "helm": "helmfile apply"
  },
  "postAttachCommand": {
    // TODO:
    // nohup kubectl port-forward --pod-running-timeout=24h -n ingress-nginx service/ingress-nginx-controller :80 &
    // kubectl port-forward service/argo-cd-argocd-server -n argocd 8080:443
  },
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/schlich/devcontainer-features/helmfile:1": {}
  }
}
